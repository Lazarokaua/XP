Algoritmo "Numeros_1XP"

Var
situ: caractere
num :real

Inicio
escreva("digite um numero")
leia(num)

se num > 0 entao
situ <- "positivo"

senao
se num < 0 entao
situ <- "negativo"

senao
se num = 0  entao
situ <- "nulo"

fimse
fimse
fimse

limpatela
escreval("seu numero é: ",situ)
//escreval("seu numero é: ",situ2)
//escreval("seu numero é: ",situ3)



Fimalgoritmo